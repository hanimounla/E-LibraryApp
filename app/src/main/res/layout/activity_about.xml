<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mounla.hani.e_library.About">

    <ImageView
        android:id="@+id/imageAbout"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ese_logo"
    android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESE (E-Library Search Engine) \n programmed by Hani Mounla and Ahmad Tarabishi \n as a graduation project :)"
        android:textSize="25sp"
        android:textColor="#4ab7a0"
        android:layout_below="@+id/imageAbout"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_marginTop="40dp" />


</RelativeLayout>
